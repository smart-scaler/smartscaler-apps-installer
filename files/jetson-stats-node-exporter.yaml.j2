apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: {{ manifest_vars.daemonset_name }}
  namespace: {{ manifest_vars.daemonset_namespace }}
  labels:
    app: jetson-stats-node-exporter
    version: v0.1.1
spec:
  selector:
    matchLabels:
      app: jetson-stats-node-exporter
  template:
    metadata:
      labels:
        app: jetson-stats-node-exporter
        version: v0.1.1
    spec:
      volumes:
        - name: jtop-sock
          hostPath:
            path: /run/jtop.sock
            type: Socket
        - name: host-proc
          hostPath:
            path: /proc
            type: Directory
        - name: host-sys
          hostPath:
            path: /sys
            type: Directory
        - name: host-dev
          hostPath:
            path: /dev
            type: Directory
        - name: host-etc
          hostPath:
            path: /etc
            type: Directory
        - name: host-var
          hostPath:
            path: /var
            type: Directory
      containers:
        - name: jetson-stats-node-exporter
          image: {{ manifest_vars.exporter_image }}
          command:
            - python3
            - '-m'
            - jetson_stats_node_exporter
            - '--port'
            - '{{ manifest_vars.exporter_port | string }}'
          ports:
            - name: metrics
              containerPort: {{ manifest_vars.exporter_port }}
              protocol: TCP
          env:
            - name: PYTHONPATH
              value: {{ manifest_vars.python_path }}
            - name: JETSON_STATS_NODE_EXPORTER_PORT
              value: '{{ manifest_vars.exporter_port | string }}'
            - name: PORT
              value: '{{ manifest_vars.exporter_port | string }}'
            - name: HOST
              value: 0.0.0.0
          resources:
            limits:
              cpu: {{ manifest_vars.resources.limits.cpu }}
              memory: {{ manifest_vars.resources.limits.memory }}
            requests:
              cpu: {{ manifest_vars.resources.requests.cpu }}
              memory: {{ manifest_vars.resources.requests.memory }}
          volumeMounts:
            - name: jtop-sock
              readOnly: true
              mountPath: /run/jtop.sock
            - name: host-proc
              readOnly: true
              mountPath: /host/proc
            - name: host-sys
              readOnly: true
              mountPath: /host/sys
            - name: host-dev
              readOnly: true
              mountPath: /host/dev
            - name: host-etc
              readOnly: true
              mountPath: /host/etc
            - name: host-var
              readOnly: true
              mountPath: /host/var
          livenessProbe:
            httpGet:
              path: /metrics
              port: {{ manifest_vars.exporter_port }}
              scheme: HTTP
            initialDelaySeconds: 60
            timeoutSeconds: 10
            periodSeconds: 30
            successThreshold: 1
            failureThreshold: 10
          readinessProbe:
            httpGet:
              path: /metrics
              port: {{ manifest_vars.exporter_port }}
              scheme: HTTP
            initialDelaySeconds: 30
            timeoutSeconds: 5
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 3
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: IfNotPresent
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      nodeSelector:
        kubernetes.io/arch: {{ manifest_vars.node_selector.kubernetes_io_arch }}
      securityContext:
        runAsUser: 0
        runAsGroup: 0
        fsGroup: 0
      schedulerName: default-scheduler
      tolerations:
{% for toleration in manifest_vars.tolerations %}
        - key: "{{ toleration.key }}"
          operator: "{{ toleration.operator }}"
          effect: "{{ toleration.effect }}"
{% endfor %}
  updateStrategy:
    type: {{ manifest_vars.update_strategy.type }}
    rollingUpdate:
      maxUnavailable: {{ manifest_vars.update_strategy.rolling_update.max_unavailable }}
      maxSurge: {{ manifest_vars.update_strategy.rolling_update.max_surge }}
  revisionHistoryLimit: {{ manifest_vars.revision_history_limit }}
